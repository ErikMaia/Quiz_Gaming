@page
@model front.Pages.Table.Edit

<h1>Alterar Evento</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tables.TableId">
            <div class="form-group">
                <label asp-for="Tables.TableId"></label>
                <input asp-for="Tables.TableId" class="form-control">
                <span asp-validation-for="Tables.TableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tables.TimesOpen"></label>
                <input asp-for="Tables.TimesOpen" class="form-control">
                <span asp-validation-for="Tables.TimesOpen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tables.TimesOpen"></label>
                <input asp-for="Tables.TimesOpen" class="form-control">
                <span asp-validation-for="Tables.TimesOpen" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Salvar"/>
                <a asp-page="/Events/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
