@page
@model front.Pages.Table.Index

<h1 class="display-4">Mesa Registradas</h1>

<hr/>
<td><a class="btn btn-success" asp-page="Create">Criar Nova Mesa</a></td>
<hr/>

<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ocupação</th>
                <th>Apagar</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Tables.Count; i++)
            {
                <tr>
                    <td>@Model.Tables[i].TableId</td>
                    <td>@(Model.Tables[i].IsFree ? "Livre" : "Ocupado")</td>
                    <td><a class="btn btn-danger" asp-page="Delete" asp-route-id="@Model.Tables[i].TableId">Deletar</a></td>
                    <td><a class="btn btn-danger" asp-page="Edit" asp-route-id="@Model.Tables[i].TableId">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
