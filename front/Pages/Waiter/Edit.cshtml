@page "{id:int}"
@model front.Pages.Waiter.Edit

<h1>Alterar Garçom</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-control">
            <input type="text" name="WaiterName" placeholder="Nome do Garçom" class="form-control"/>
            <input type="text" name="WaiterLastName" placeholder="Sobrenome do Garçom" class="form-control"/>
            <input type="number" name="WaiterFone" placeholder="Telefone do Garçom" class="form-control" />

            <button type="submit" class="btn btn-danger">Salvar</button>
        </form>
    </div>
</div>
<script>
    function validate() {
        let value = document.getElementById('WaiterName').value;
        let label = document.getElementById('Name-Validator').innerText;
        label.innerText = '';
        let button = document.getElementById('submit');
        button.disabled = false;
        if (value == '') {
            document.getElementById('Name-Validator').innerText = 'Valor Nulo';
            button.disabled = true;
        }
    }
</script>
