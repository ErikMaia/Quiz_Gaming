@page
@model front.Pages.Waiter.Create

<h1>Criar um Novo Garçom</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-group">
            <div class="form-group">
                <label for="FirstName">Nome:</label>
                <input type="text" name="FirstName" class="form-control" placeholder="Primeiro Nome" />
            </div>
            <div class="form-group">
                <label for="LastName">Sobrenome:</label>
                <input type="text" name="LastName" class="form-control" placeholder="Sobrenome" />
            </div>
            <div class="form-group">
                <label for="Fone">Telefone:</label>
                <input type="number" name="Fone" class="form-control" placeholder="Telefone" />
            </div>
            <button type="submit" class="btn btn-danger">Criar Garçom</button>
        </form>
    </div>
</div>
